---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
  image: ImageMetadata; // Para aceptar un objeto de imagen importado
}

const { image } = Astro.props as Props;

// Obtener la URL correcta de la imagen usando getImage
const optimizedImage = await getImage({ src: image });

// Usar la URL del objeto ImageMetadata procesado por Astro
// Esto asegura que la ruta sea relativa al proyecto
const imageUrl = optimizedImage.src;
---

<div class="banner-thumb" style={`background-image: url('${imageUrl}');`}>
</div>
