---
import { Image } from "astro:assets";
import choose1 from "@/assets/imgs/resources/choose-1.webp";
---

<!-- Choose area start -->
<section
  aria-label="Testimonials section"
  class="choose-section bg-color-1 section-space-top p-relative"
>
  <div class="small-container">
    <div class="row g-4">
      <div
        class="col-xxl-6 col-xl-6 col-lg-6 p-relative section-space-medium-bottom"
      >
        <div class="title-box mb-50" data-aos="fade-left" data-aos-delay="100">
          <span class="section-sub-titledos">WHY CHOOSE MAC PAVING</span>
          <h3 class="section-title mt-35">
            Paving Partners Focused on North Jersey Properties
          </h3>
        </div>

        <hr />

        <!-- Local expertise -->
        <div
          class="choose-area-icon-box mb-15"
          data-aos="fade-right"
          data-aos-delay="150"
        >
          <div class="icon-box p-relative">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="content">
            <h5>Transparent Scopes & Schedules</h5>
            <p>
              Line-item estimates, simple timelines, and clear updates keep you
              in the loop on every driveway or storefront project.
            </p>
          </div>
        </div>
        <hr />
        <hr />
        <!-- Owner involvement -->
        <div
          class="choose-area-icon-box mb-15"
          data-aos="fade-right"
          data-aos-delay="200"
        >
          <div class="icon-box p-relative">
            <i class="fas fa-people-carry"></i>
          </div>
          <div class="content">
            <h5>Owner-Led Crews</h5>
            <p>
              Dedicated foremen on every job plus direct access to ownership for
              decisions or changes so work stays on track.
            </p>
          </div>
        </div>
        <hr />
        <hr />
        <!-- Full Service -->
        <div
          class="choose-area-icon-box mb-15"
          data-aos="fade-right"
          data-aos-delay="250"
        >
          <div class="icon-box p-relative">
            <i class="fas fa-layer-group"></i>
          </div>
          <div class="content">
            <h5>Durable Everyday Solutions</h5>
            <p>
              From driveways to compact parking lots, we pair paving,
              sealcoating, and striping to keep surfaces strong and neat all
              year.
            </p>
          </div>
        </div>
      </div>

      <div
        class="col-xxl-6 col-xl-6 col-lg-6"
        data-aos="fade-left"
        data-aos-delay="150"
      >
        <figure class="image m-img">
          <Image
            src={choose1}
            alt="North Jersey paving specialists reviewing a driveway plan in Bergen County NJ"
            width={464}
            height={533}
            quality={80}
            format="webp"
          />
        </figure>
      </div>
    </div>
  </div>
</section>
<!-- Choose area end -->
