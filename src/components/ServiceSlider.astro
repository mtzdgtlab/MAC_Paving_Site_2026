---
import { Image } from "astro:assets";

import asphaltReplacement from "@/assets/imgs/service/asphalt-paving/asphalt-service.webp";
import belgiumBlocksCard from "@/assets/imgs/service/belgium-blocks/belguium-service.webp";
import sealerService from "@/assets/imgs/service/sealer/sealer-service-2.webp";
---

<style>
  @import "/src/assets/css/service-cards.css";
</style>

<!-- Service Slider area start -->
<section
  aria-label="Services section"
  class="service-slider-section section-space bg-color-1"
>
  <div class="shape-10" data-background="/assets/imgs/shapes/shape-10.webp">
  </div>
  <div class="shape-9" data-background="/assets/imgs/shapes/shape-9.webp"></div>
  <div class="container">
    <div class="row align-items-center justify-content-between">
      <div
        class="col-xxl-12 d-flex justify-content-between align-items-center flex-wrap"
      >
        <div class="title-box mb-50" data-aos="fade-left" data-aos-delay="200">
          <span class="section-sub-titledos">
            North Jersey Paving & Maintenance
          </span>
          <h3 class="section-title mt-35">
            <a href="/services/" style="color: inherit; text-decoration: none;">
              Signature Paving Services
            </a>
          </h3>
        </div>
        <div class="service_1_navigation__wrapprer position-relative z-1 mt-30">
          <div class="common-slider-navigation">
            <button class="service-1-button-prev" aria-label="Previous service">
              <i class="fas fa-arrow-left"></i>
            </button>
            <button class="service-1-button-next" aria-label="Next service">
              <i class="fas fa-arrow-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="swiper service-active-1">
      <div class="swiper-wrapper">
        <!-- Paving Services -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/paving-services-nj/">
                <figure class="service-image">
                  <Image
                    src={asphaltReplacement}
                    alt="Driveway paving crew compacting asphalt in Passaic County NJ"
                    width={370}
                    height={278}
                    format="webp"
                    quality={85}
                    sizes="(max-width: 768px) 100vw, 370px"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-road"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/paving-services-nj/">Paving Services</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                Owner-led crews handle driveway installation, resurfacing,
                replacement, and extensions with engineered bases
                and finishing details across North Jersey counties.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/paving-services-nj/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Sealer -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/sealer-services-nj/">
                <figure class="service-image">
                  <Image
                    src={sealerService}
                    alt="Sealcoating technician spraying asphalt protection in Bergen County NJ"
                    width={370}
                    height={278}
                    format="webp"
                    quality={85}
                    sizes="(max-width: 768px) 100vw, 370px"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-fill-drip"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/sealer-services-nj/">Sealer Services</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                Sealcoating, crack filling, and line striping programs that
                protect asphalt, keep markings clear, and simplify maintenance
                for residential driveways and small lots.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/sealer-services-nj/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Belgium Blocks -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/belgium-blocks/">
                <figure class="service-image">
                  <Image
                    src={belgiumBlocksCard}
                    alt="Belgium block edging crew setting stones in Morris County NJ"
                    width={370}
                    height={278}
                    format="webp"
                    quality={85}
                    sizes="(max-width: 768px) 100vw, 370px"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-th-large"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/belgium-blocks/">Belgium Blocks</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                Belgium block edging for driveways and walkways delivers clean
                lines, strong borders, and lasting curb appeal for North Jersey
                properties.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/belgium-blocks/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
<!-- Service Slider area end -->
