---
import serviceWidget from "@/assets/imgs/logo/service-widget-1.webp";
---
<div class="col-xxl-4 col-xl-4 col-lg-4">
  <div class="service-sidebar">
    <aside>
      <div class="service-widget-1 mb-30">
        <h5>Main Services</h5>
        <ul>
          <li>
            <a href="/services/paving-services-nj/">
              <span>Paving Services</span>
              <span><i class="icon-arrow-right-double"></i></span>
            </a>
          </li>
          <li>
            <a href="/services/sealer-services-nj/">
              <span>Sealer</span>
              <span><i class="icon-arrow-right-double"></i></span>
            </a>
          </li>
          <li>
            <a href="/services/belgium-blocks/">
              <span>Belgium Blocks</span>
              <span><i class="icon-arrow-right-double"></i></span>
            </a>
          </li>
        </ul>
      </div>
      <div class="contact-box mb-30">
        <div class="service-widget-2">
          <figure class="w-img">
            <img
              src={serviceWidget.src}
              alt="MAC Paving and Sealcoating" />
            <div style="margin-bottom: 25px"></div>
          </figure>
          <div class="content bg-color-1 text-center">
            <div class="icon-box p-relative">
              <i class="fa-brands fa-whatsapp"></i>
            </div>
            <h5>Chat with us on WhatsApp</h5>
            <div class="btn-box">
              <a
                class="primary-btn-1 btn-hover"
                href="https://wa.me/12017557836"
                target="_blank">
                GET A QUOTE |
                <i class="fas fa-arrow-right"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </aside>
  </div>
</div>
