---
import appleTouchIcon from "@/assets/imgs/favicon/apple-touch-icon.webp";
import favicon16 from "@/assets/imgs/favicon/favicon-16x16.webp";
import favicon32 from "@/assets/imgs/favicon/favicon-32x32.webp";
import faviconIco from "@/assets/imgs/favicon/favicon.ico?url";
import safariPinned from "@/assets/imgs/favicon/safari-pinned-tab.svg?url";
import maskableIcon from "@/assets/imgs/favicon/maskable-icon.webp";
import androidChrome192 from "@/assets/imgs/favicon/android-chrome-192x192.webp";
import androidChrome512 from "@/assets/imgs/favicon/android-chrome-512x512.webp";

const manifestHref = "/assets/imgs/favicon/site.webmanifest";
---

<!-- Favicon moderno -->
<link rel="icon" href={faviconIco} sizes="any" />
<link rel="icon" href={androidChrome192.src} sizes="192x192" type="image/webp" />
<link rel="icon" href={androidChrome512.src} sizes="512x512" type="image/webp" />
<link rel="icon" href={maskableIcon.src} sizes="512x512" type="image/webp" />
<link 
  rel="apple-touch-icon" 
  sizes="180x180" 
  href={appleTouchIcon.src} />
<link 
  rel="icon" 
  type="image/png" 
  sizes="32x32" 
  href={favicon32.src} />
<link 
  rel="icon" 
  type="image/png" 
  sizes="16x16" 
  href={favicon16.src} />
<link rel="manifest" href={manifestHref} />
<link 
  rel="mask-icon" 
  href={safariPinned} 
  color="#1C5EA0" />
<meta name="msapplication-TileColor" content="#ffffff" />
<meta name="theme-color" content="#1A3164" />
