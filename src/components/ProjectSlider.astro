        </div>
      </div>
      <!-- block -->
      <div class="swiper-slide">
        <div class="project-slider-area p-relative">
          <figure class="image m-imge shine-img">
            <Image
              src="/assets/imgs/project/project-3.webp"
              alt="Driveway paving replacement for a Morris County NJ property"
              width={570}
              height={439}
              quality={80}
              format="webp"
            />
          </figure>
          <div class="content-area"></div>
        </div>
      </div>
      <!-- block -->
      <div class="swiper-slide">
        <div class="project-slider-area p-relative">
