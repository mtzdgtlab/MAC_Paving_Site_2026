<div class="col-xxl-4 col-xl-4 col-lg-4">
  <div class="contact-page-form-area">
    <div class="title-box mb-40 wow fadeInLeft" data-wow-delay=".5s">
      <span class="section-sub-title">LET'S TALK</span>
      <h3 class="section-title mt-10" aria-label="Let's Get in Touch">
        Get Your Free Estimate
      </h3>
    </div>
    <div class="contact-page-form">
      <form
        action="https://formspree.io/f/mvgpzjbv"
        method="POST"
        id="smallContactForm"
      >
        <div class="row">
          <div class="col-lg-12">
            <label for="name">Your Name*</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Your Name*"
              required
            />
          </div>
          <div class="col-lg-12">
            <label for="email">Your Email*</label>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Your Email*"
              required
            />
          </div>
          <div class="col-lg-12">
            <label for="phone">Your Phone*</label>
            <input
              type="tel"
              name="phone"
              id="phone"
              placeholder="Your Phone*"
              pattern="[0-9]{10}"
              required
            />
          </div>
          <div class="col-lg-12">
            <label for="service">Required Service*</label>
            <input
              type="text"
              name="service"
              id="service"
              placeholder="Required Service*"
              required
            />
          </div>
          <div class="col-lg-12">
            <label for="address">Your Address*</label>
            <input
              type="text"
              name="address"
              id="address"
              placeholder="Your Address*"
              required
            />
          </div>
          <div class="col-lg-12">
            <button type="submit" class="primary-btn-1 btn-hover">
              Send Now | <i class="fas fa-arrow-right"></i>
            </button>
          </div>
        </div>
        <div id="smallFormMessage" class="mt-3" style="display: none"></div>
      </form>
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Contact Form
    const contactForm = document.getElementById(
      "smallContactForm"
    ) as HTMLFormElement | null;
    const formMessage = document.getElementById(
      "smallFormMessage"
    ) as HTMLDivElement | null;

    if (contactForm && formMessage) {
      contactForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        try {
          const response = await fetch(contactForm.action, {
            method: "POST",
            body: new FormData(contactForm),
            headers: {
              Accept: "application/json",
            },
          });

          if (response.ok) {
            formMessage.textContent =
              "Thank you for your message! We'll get back to you soon.";
            formMessage.style.color = "#FFFFFF";
            formMessage.style.fontWeight = "bold";
            formMessage.style.fontSize = "1.2em";
            contactForm.reset();
          } else {
            throw new Error("Form submission failed");
          }
        } catch (error) {
          formMessage.textContent =
            "Sorry, there was an error submitting your message. Please try again.";
          formMessage.style.color = "yellow";
        }
        formMessage.style.display = "block";
      });
    }
  });
</script>
