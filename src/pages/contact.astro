---
// Import contact background image
import contactBg from "@/assets/imgs/bg/contact-cover.webp";
import BreadcrumService from "@/components/BreadcrumService.astro";
import CSSbase from "@/components/CSSbase.astro";
import Favicon from "@/components/Favicon.astro";
import Footer from "@/components/Footer.astro";
import LargeForm from "@/components/LargeForm.astro";
import MapSection from "@/components/MapSection.astro";
import Navbar from "@/components/Navbar.astro";
import Preloader from "@/components/Preloader.astro";
import Scripts from "@/components/Scripts.astro";
import SocialMeta from "@/components/SocialMeta.astro";
import TestimonialsSlider from "@/components/TestimonialsSlider.astro";
import WhyChooseUs from "@/components/WhyChooseUs.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="format-detection" content="telephone=no" />
    <title>Contact MAC Paving | Asphalt Paving Services NJ</title>
    <meta
      name="description"
      content="Reach MAC Paving and Sealcoating LLC for driveway paving, resurfacing, replacement, extensions, sealcoating, crack filling, line striping, and Belgium block projects across Passaic, Bergen, Morris, Essex, Hudson, Union, Middlesex, Somerset, and Sussex counties."
    />
    <link rel="canonical" href="https://macpavingandsealcoating.com/contact/" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="keywords"
      content="asphalt paving NJ, paving contractors NJ, driveway paving NJ, asphalt companies NJ, commercial paving NJ, residential paving NJ, blacktop paving NJ, asphalt resurfacing NJ, asphalt repair NJ, sealcoating NJ, pothole repair NJ, driveway resurfacing NJ, pavement maintenance NJ, asphalt paving near me NJ, asphalt paving Paterson NJ, asphalt paving Clifton NJ, asphalt paving Bergen County NJ, driveway paving Essex County NJ, custom driveway paving NJ, decorative driveways NJ, MAC Paving and Sealcoating, professional asphalt services NJ, NJ blacktop company, local asphalt contractor NJ, asphalt, contractor, NJ, driveway extension, asphalt paving, NJ"
    />

    <Favicon />
    <SocialMeta
      title="Contact MAC Paving | Asphalt Paving Services NJ"
      description="Talk with MAC Paving and Sealcoating for driveway paving, sealcoating, crack filling, line striping, and Belgium block projects across North Jersey."
      url="https://macpavingandsealcoating.com/contact/"
    />
    <CSSbase />
  </head>
  <body>
    <Preloader />
    <Navbar />
    <!-- Header area end -->

    <main>
      <!-- Breadcrumb area start -->
      <div class="breadcrumb__area theme-bg-1 p-relative pt-160 pb-160">
        <BreadcrumService image={contactBg} />
        <div class="small-container">
          <div class="row justify-content-center justify-content-md-start">
            <div class="col-9 col-sm-9 col-md-8 col-lg-8 col-xl-8 col-xxl-8">
              <div class="breadcrumb__wrapper p-relative">
                <h1 class="breadcrumb__title">
                  Contact MAC Paving and Sealcoating
                </h1>
                <div class="breadcrumb__menu">
                  <nav>
                    <ul>
                      <li>
                        <span><a href="/">Home / </a></span>
                      </li>
                      <li><span>Contact</span></li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Breadcrumb area end -->

      <section class="contact-page-section section-space">
        <div class="small-container">
          <div class="row">
            <div class="col-xxl-4 col-xl-4 col-lg-4">
              <div class="contact-p-info-area">
                <div class="contact-box mb-50">
                  <div class="icon-1">
                    <i class="fas fa-envelope"></i>
                  </div>
                  <div class="info">
                    <strong><span>Email</span></strong>
                    <h4>
                      <a
                        href="mailto:mg@macpavingandsealcoating.com"
                        style="color:#1f4e8c; font-weight:bold;"
                      >
                        Click Here</a
                      >
                    </h4>
                  </div>
                </div>
                <div class="contact-box mb-30">
                  <div class="icon-1">
                    <i class="fas fa-phone-volume"></i>
                  </div>
                  <div class="info">
                    <strong><span>Phone (answered by ownership)</span></strong>
                    <h4><a href="tel:+12017557836">(201) 755-7836</a></h4>
                  </div>
                </div>
                <div class="contact-box">
                  <div class="icon-1">
                    <i class="fa-brands fa-whatsapp"></i>
                  </div>
                  <div class="info">
                    <strong><span>Chat with Us</span></strong>
                    <h4>
                      <a
                        href="https://wa.me/12017557836"
                        target="_blank"
                        style="color: #1c5ea0; font-weight: bold"
                      >
                        WhatsApp
                      </a>
                    </h4>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xxl-8 col-xl-8 col-lg-8">
              <div class="contact-page-form-area">
                <div
                  class="title-box mb-40 wow fadeInLeft"
                  data-wow-delay=".5s"
                >
                  <span class="section-sub-title">Schedule a Site Visit</span>
                  <h3 class="section-title mt-10">Reserve on Google Calendar</h3>
                </div>
                <!-- Google Calendar Appointment Scheduling begin -->
                <iframe
                  src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ2f2-a8hsmFRdKAdT1bvjgeib5aUhRroNwmyM-fq0U3_9Y7cAp5Qw3vk9NztACX34Ggtqf1JxI-?gv=true"
                  style="border: 0"
                  width="100%"
                  height="600"
                  frameborder="0"
                  loading="lazy"
                ></iframe>
                <!-- Google Calendar Appointment Scheduling end -->
              </div>
            </div>
          </div>
        </div>
      </section>

      <WhyChooseUs />

      <LargeForm
        title="Request a Driveway Estimate"
        subtitle="Connect with Our Team"
        buttonText="Request a Driveway Estimate"
        formAction="https://formspree.io/f/mvgpzjbv"
      />
      <div class="small-container">
        <p class="mt-10 mb-0">
          Form submissions are SSL-secured; please avoid including payment
          details online.
        </p>
      </div>
      <TestimonialsSlider />
      <MapSection />

      <Footer />
      <Scripts />
    </main>
  </body>
</html>
