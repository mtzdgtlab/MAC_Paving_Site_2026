---
import { Image } from "astro:assets";
// Import background image
import asphaltServiceBg from "@/assets/imgs/banner/asphalt-service.webp";
// Import extension images
import extension1 from "@/assets/imgs/service/asphalt-paving/extension-1.webp";
import extension2 from "@/assets/imgs/service/asphalt-paving/extension-2.webp";
import extension3 from "@/assets/imgs/service/asphalt-paving/extension-3.webp";
import extension4 from "@/assets/imgs/service/asphalt-paving/extension-4.webp";
import Brands from "@/components/Brands.astro";
import BreadcrumService from "@/components/BreadcrumService.astro";
import CSSbase from "@/components/CSSbase.astro";
import Favicon from "@/components/Favicon.astro";
import Footer from "@/components/Footer.astro";
import MainServices from "@/components/MainServices.astro";
import Navbar from "@/components/Navbar.astro";
import Preloader from "@/components/Preloader.astro";
import Scripts from "@/components/Scripts.astro";
import SocialMeta from "@/components/SocialMeta.astro";
import TestimonialsSlider from "@/components/TestimonialsSlider.astro";
import Flotante from "@/components/Flotante.astro";

const pageMeta = {
  title: "Driveway Extension NJ | MAC Paving",
  description:
    "Efficient asphalt paving extension services to expand existing paved areas, providing more space and functionality while maintaining a seamless integration with current surfaces.",
  url:
    "https://macpavingandsealcoating.com/services/paving-services-nj/driveway-extension/",
  keywords:
    "paving services NJ, driveway paving in Passaic, asphalt contractors New Jersey, driveway extension NJ, driveway paving Bergen County, driveway expansion Morris County, parking extension Sussex County",
  image: "https://macpavingandsealcoating.com/og-image.png",
};

const countiesServed = [
  "Passaic County",
  "Bergen County",
  "Morris County",
  "Essex County",
  "Hudson County",
  "Union County",
  "Middlesex County",
  "Somerset County",
  "Sussex County",
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Driveway Paving Extension",
  name: pageMeta.title,
  description: pageMeta.description,
  areaServed: countiesServed.map((county) => ({
    "@type": "AdministrativeArea",
    name: county,
    addressCountry: "US",
    addressRegion: "NJ",
  })),
  provider: {
    "@type": "LocalBusiness",
    name: "MAC Paving and Sealcoating LLC",
    url: "https://macpavingandsealcoating.com/",
    telephone: "+1-201-755-7836",
    address: {
      "@type": "PostalAddress",
      addressRegion: "NJ",
      addressCountry: "US",
    },
    image: "https://macpavingandsealcoating.com/logo.png",
  },
  offers: [
    {
      "@type": "Offer",
      name: "Driveway Extension Planning & Installation",
      priceCurrency: "USD",
      availability: "https://schema.org/InStock",
    },
  ],
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Driveway Paving Services NJ",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Installation" },
      },
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Extension" },
      },
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Resurfacing" },
      },
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Replacement" },
      },
    ],
  },
  potentialAction: [
    {
      "@type": "CallAction",
      target: "tel:+12017557836",
      name: "Call MAC Paving and Sealcoating LLC",
    },
    {
      "@type": "ReserveAction",
      name: "Book a Free Estimate",
      target: [
        {
          "@type": "EntryPoint",
          urlTemplate: "https://calendar.app.google/CQVM2nVsX15QCVq16",
          inLanguage: "en",
          actionPlatform: [
            "http://schema.org/DesktopWebPlatform",
            "http://schema.org/MobileWebPlatform",
          ],
        },
        {
          "@type": "EntryPoint",
          urlTemplate: "https://macpavingandsealcoating.com/contact/",
          inLanguage: "en",
          actionPlatform: [
            "http://schema.org/DesktopWebPlatform",
            "http://schema.org/MobileWebPlatform",
          ],
        },
      ],
    },
  ],
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="format-detection" content="telephone=no" />
    <title>{pageMeta.title}</title>
    <!-- PreconexiÃ³n para recursos externos (mejora rendimiento) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
    <meta name="description" content={pageMeta.description} />
    <link rel="canonical" href={pageMeta.url} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content={pageMeta.keywords} />
    <script type="application/ld+json">
      {JSON.stringify(serviceSchema)}
    </script>

    <Favicon />
    <SocialMeta
      title={pageMeta.title}
      description={pageMeta.description}
      url={pageMeta.url}
      image={pageMeta.image}
    />
    <CSSbase />
  </head>
  <body>
    <Preloader />
    <Navbar />
    <!-- Header area end -->
    <main>
      <!-- Breadcrumb area start -->
      <div class="breadcrumb__area theme-bg-1 p-relative pt-160 pb-160">
        <BreadcrumService image={asphaltServiceBg} />
        <div class="small-container">
          <div class="row justify-content-center justify-content-md-start">
            <div class="col-9 col-sm-9 col-md-8 col-lg-8 col-xl-8 col-xxl-8">
              <div class="breadcrumb__wrapper p-relative">
                <h1 class="breadcrumb__title">
                  Driveway Extension Services in New Jersey
                </h1>
                <div class="breadcrumb__menu">
                  <nav>
                    <ul>
                      <li>
                        <span><a href="/">Home / </a></span>
                      </li>
                      <li>
                        <span>Services / Paving Services / Driveway Extension</span>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Breadcrumb area end -->
      <section class="service-details-page section-space">
        <div class="small-container">
          <div class="row">
            <div class="col-xxl-8 col-xl-8 col-lg-8">
              <div class="service-details-page-content">
                <h2 class="service-details-title mt-25 mb-25">
                  Efficient Asphalt Paving Extensions
                </h2>
                <p class="mb-25">
                  Efficient asphalt paving extension services to expand existing
                  paved areas, providing more space and functionality while
                  maintaining a seamless integration with current surfaces.
                </p>
                <div class="row">
                  <div class="col-lg-6">
                    <figure class="w-img">
                      <Image
                        src={extension1}
                        alt="Professional driveway paving contractor in Passaic County NJ"
                        width={600}
                        height={400}
                        loading="lazy"
                      />
                    </figure>
                  </div>
                  <div class="col-lg-6">
                    <figure class="w-img">
                      <Image
                        src={extension2}
                        alt="Residential paving installation near Bergen County NJ"
                        width={600}
                        height={400}
                        loading="lazy"
                      />
                    </figure>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <h3 class="service-details-subtitle mt-45 mb-25">
                      Full-Service Planning, Permits, and Site Prep
                    </h3>
                    <p class="mb-25">
                      As asphalt contractors New Jersey residents and facility
                      managers recommend, we handle every technical detail of
                      your extension. Our team confirms lot coverage, marks
                      utilities, fine-tunes grading, rebuilds the base, and
                      installs hot-mix asphalt that ties into your existing
                      driveway without cold joints. You get one point of contact
                      and a documented schedule from prep through cleanup.
                    </p>
                  </div>
                  <div class="col-lg-6">
                    <h3 class="service-details-subtitle mt-45 mb-25">
                      Residential, Commercial, Industrial, and Private Drives
                    </h3>
                    <p class="mb-25">
                      Whether you manage a multifamily complex in Hudson County,
                      a manufacturing lot in Union, or a lakeside home in
                      Sussex, we customize the extension to your traffic loads.
                      Driveway paving in Passaic often calls for thicker stone
                      bases, while Bergen and Morris projects may require
                      decorative aprons or EV-ready conduits. Whatever the use
                      case, we blend aesthetics with structural performance.
                    </p>
                  </div>
                </div>
                <figure class="w-img">
                  <Image
                    src={extension3}
                    alt="Commercial asphalt resurfacing in Essex NJ"
                    width={1200}
                    height={600}
                    loading="lazy"
                  />
                </figure>
                <h3 class="service-details-subtitle mt-45 mb-25">
                  Is a Driveway Extension Right for Your Property?
                </h3>
                <p class="mb-25">
                  Extensions help when you are juggling teen drivers, storing
                  work vans, protecting landscaping, or planning an outdoor
                  court. We evaluate slopes, subbase health, municipal codes,
                  and water movement so the added asphalt performs like it has
                  always been there. Share your wish list and we will map out
                  options, budgets, and timelines before crews mobilize.
                </p>
                <div class="row">
                  <div class="col-lg-7">
                    <figure class="w-img">
                      <Image
                        src={extension4}
                        alt="Affordable paving maintenance services in Morris County"
                        width={800}
                        height={500}
                        loading="lazy"
                      />
                    </figure>
                  </div>
                  <div class="col-lg-5 center-xs-list">
                    <h3 class="section-sub-subtitle pt-20 pb-10">
                      Extension Quality Checklist
                    </h3>
                    <ul
                      class="service-details-page-list pt-20 pb-10 split-xs-columns"
                    >
                      <li>
                        Family-owned paving services NJ with onsite project managers
                        for every pour.
                      </li>
                      <li>
                        Laser-guided grading, slope tuning, and soil
                        stabilization that keeps water off structures.
                      </li>
                      <li>
                        Residential, commercial, industrial, and private campus
                        driveways tailored to load requirements.
                      </li>
                      <li>
                        Optional sealcoating, striping, and maintenance programs
                        to protect your added asphalt.
                      </li>
                    </ul>
                    <h3 class="section-sub-subtitle pt-20 pb-10">
                      Serving North Jersey Counties
                    </h3>
                    <ul
                      class="service-details-page-list pt-20 pb-10 split-xs-columns"
                    >
                      {countiesServed.map((county) => (
                        <li>{county}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <MainServices />
          </div>
        </div>
      </section>
      <TestimonialsSlider />
      <Brands />
    </main>
    <Footer />
    <Scripts />
    <Flotante />
  </body>
</html>
