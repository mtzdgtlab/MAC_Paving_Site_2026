---
import { Image } from "astro:assets";
// Import background image
import asphaltServiceBg from "@/assets/imgs/banner/asphalt-service.webp";
// Import installation images
import installation1 from "@/assets/imgs/service/asphalt-paving/installation-1.webp";
import installation2 from "@/assets/imgs/service/asphalt-paving/installation-2.webp";
import installation3 from "@/assets/imgs/service/asphalt-paving/installation-3.webp";
import installation4 from "@/assets/imgs/service/asphalt-paving/installation-4.webp";
import logo from "@/assets/imgs/logo.png";
import BreadcrumService from "@/components/BreadcrumService.astro";
import CSSbase from "@/components/CSSbase.astro";
import Favicon from "@/components/Favicon.astro";
import Footer from "@/components/Footer.astro";
import MainServices from "@/components/MainServices.astro";
import MapSection from "@/components/MapSection.astro";
import Navbar from "@/components/Navbar.astro";
import Preloader from "@/components/Preloader.astro";
import Scripts from "@/components/Scripts.astro";
import SocialMeta from "@/components/SocialMeta.astro";
import WhyChooseUs from "@/components/WhyChooseUs.astro";
import Flotante from "@/components/Flotante.astro";

const site = Astro.site ?? new URL("https://macpavingandsealcoating.com");
const toAbsolute = (asset: { src: string } | string) =>
  typeof asset === "string" ? asset : new URL(asset.src, site).href;

const pageMeta = {
  title: "Driveway Installation NJ | MAC Paving",
  description:
    "Professional asphalt paving installation services ensuring durable and smooth surfaces for driveways, roads, and parking lots, enhancing both functionality and appearance.",
  url:
    "https://macpavingandsealcoating.com/services/paving-services-nj/driveway-installation/",
  keywords:
    "paving services NJ, driveway paving in Passaic, asphalt contractors New Jersey, driveway installation NJ, residential driveway paving Bergen County, commercial paving Morris County, industrial paving Essex County",
  image: installation1,
  imageAlt: "Driveway paving installation crew compacting fresh asphalt in North Jersey",
};

const pageImageUrl = toAbsolute(pageMeta.image);
const logoUrl = toAbsolute(logo);

const countiesServed = [
  "Passaic County",
  "Bergen County",
  "Morris County",
  "Essex County",
  "Hudson County",
  "Union County",
  "Middlesex County",
  "Somerset County",
  "Sussex County",
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  serviceType: "Driveway Paving Installation",
  name: pageMeta.title,
  description: pageMeta.description,
  image: pageImageUrl,
  areaServed: countiesServed.map((county) => ({
    "@type": "AdministrativeArea",
    name: county,
    addressCountry: "US",
    addressRegion: "NJ",
  })),
  provider: {
    "@type": "LocalBusiness",
    name: "MAC Paving and Sealcoating LLC",
    url: site.href,
    telephone: "+1-201-755-7836",
    address: {
      "@type": "PostalAddress",
      addressRegion: "NJ",
      addressCountry: "US",
    },
    image: logoUrl,
  },
  offers: [
    {
      "@type": "Offer",
      name: "Driveway Paving Installation",
      priceCurrency: "USD",
      availability: "https://schema.org/InStock",
    },
  ],
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Driveway Paving Services NJ",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Installation" },
      },
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Resurfacing" },
      },
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Replacement" },
      },
      {
        "@type": "Offer",
        itemOffered: { "@type": "Service", name: "Paving Extension" },
      },
    ],
  },
  potentialAction: [
    {
      "@type": "CallAction",
      target: "tel:+12017557836",
      name: "Call MAC Paving and Sealcoating LLC",
    },
    {
      "@type": "ReserveAction",
      name: "Book a Free Estimate",
      target: [
        {
          "@type": "EntryPoint",
          urlTemplate: "https://calendar.app.google/CQVM2nVsX15QCVq16",
          inLanguage: "en",
          actionPlatform: [
            "http://schema.org/DesktopWebPlatform",
            "http://schema.org/MobileWebPlatform",
          ],
        },
        {
          "@type": "EntryPoint",
          urlTemplate: "https://macpavingandsealcoating.com/contact/",
          inLanguage: "en",
          actionPlatform: [
            "http://schema.org/DesktopWebPlatform",
            "http://schema.org/MobileWebPlatform",
          ],
        },
      ],
    },
  ],
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="format-detection" content="telephone=no" />
    <title>{pageMeta.title}</title>
    <!-- PreconexiÃ³n para recursos externos (mejora rendimiento) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
    <meta name="description" content={pageMeta.description} />
    <link rel="canonical" href={pageMeta.url} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content={pageMeta.keywords} />
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(serviceSchema)}
    ></script>
    <Favicon />
    <SocialMeta
      title={pageMeta.title}
      description={pageMeta.description}
      url={pageMeta.url}
      image={pageMeta.image}
      imageAlt={pageMeta.imageAlt}
    />
    <CSSbase />
  </head>
  <body>
    <Preloader />
    <Navbar />
    <!-- Header area end -->
    <main>
      <!-- Breadcrumb area start -->
      <div class="breadcrumb__area theme-bg-1 p-relative pt-160 pb-160">
        <BreadcrumService image={asphaltServiceBg} />
        <div class="small-container">
          <div class="row justify-content-center justify-content-md-start">
            <div class="col-9 col-sm-9 col-md-8 col-lg-8 col-xl-8 col-xxl-8">
              <div class="breadcrumb__wrapper p-relative">
                <h1 class="breadcrumb__title">
                  Driveway Installation Services in New Jersey
                </h1>
                <div class="breadcrumb__menu">
                  <nav>
                    <ul>
                      <li>
                        <span><a href="/">Home / </a></span>
                      </li>
                      <li>
                        <span><a href="/services/">Services / </a></span>
                      </li>
                      <li>
                        <span
                          ><a href="/services/paving-services-nj/"
                            >Paving / </a
                          ></span
                        >
                      </li>
                      <li><span>Driveway Installation</span></li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Breadcrumb area end -->
      <section class="service-details-page section-space">
        <div class="small-container">
          <div class="row">
            <div class="col-xxl-8 col-xl-8 col-lg-8">
              <div class="service-details-page-content">
                <h2 class="service-details-title mt-25 mb-25">
                  Professional Asphalt Paving Installation
                </h2>
                <p class="mb-25">
                  Professional asphalt paving installation services to ensure a
                  durable and smooth surface for your driveways, roads, and
                  parking lots. Our expert team ensures that every paving
                  project is completed with the utmost precision and care,
                  delivering a durable and aesthetically pleasing surface that
                  meets all your requirements.
                </p>
                <p class="mb-25">
                  Our paving installation process guarantees a long-lasting
                  result by using high-quality materials and expert techniques.
                  We use state-of-the-art equipment and a high-quality materials
                  guarantee to ensure a strong and lasting finish. Our process
                  is designed to be efficient and minimally disruptive, so you
                  can enjoy your new pavement as soon as possible.
                </p>
                <p class="mb-25">
                  Installing new asphalt surfaces is a reliable and valuable
                  solution to enhance the overall functionality and appearance
                  of your property. By choosing our services, you invest in the
                  longevity and performance of your asphalt surfaces. Our team
                  is committed to providing exceptional results that enhance the
                  value and functionality of your property.
                </p>
                <div class="row">
                  <div class="col-lg-6">
                    <figure class="w-img">
                      <Image
                        src={installation1}
                        alt="Residential driveway paving installation in Passaic County NJ"
                        width={600}
                        height={400}
                        loading="lazy"
                      />
                    </figure>
                  </div>
                  <div class="col-lg-6">
                    <figure class="w-img">
                      <Image
                        src={installation2}
                        alt="Commercial driveway paving crew working in Bergen County NJ"
                        width={600}
                        height={400}
                        loading="lazy"
                      />
                    </figure>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <h3 class="service-details-subtitle mt-45 mb-25">
                      Service Details
                    </h3>
                    <p class="mb-25">
                      Our asphalt paving installation service includes site
                      preparation, base installation, asphalt laying, and
                      finishing. We start with a thorough assessment of the site
                      conditions, followed by meticulous preparation and
                      professional application techniques. Our goal is to
                      deliver a finished product that exceeds your expectations
                      in both appearance and durability.
                    </p>
                  </div>
                  <div class="col-lg-6">
                    <h3 class="service-details-subtitle mt-45 mb-25">
                      Where It Works
                    </h3>
                    <ul class="service-details-page-list">
                      <li>Driveways</li>
                      <li>Roads</li>
                      <li>Parking lots</li>
                      <li>Pathways</li>
                      <li>Residential properties</li>
                      <li>Commercial properties</li>
                      <li>Industrial properties</li>
                    </ul>
                  </div>
                </div>
                <figure class="w-img">
                  <Image
                    src={installation3}
                    alt="Industrial driveway paving installation underway in Essex County NJ"
                    width={1200}
                    height={600}
                    loading="lazy"
                  />
                </figure>
                <h3 class="service-details-subtitle mt-45 mb-25">
                  When a New Driveway Installation Makes Sense
                </h3>
                <p class="mb-25">
                  Aging pavement, pooling water, rutting, or limited parking are
                  all signs it's time to rebuild. A new asphalt driveway delivers
                  predictable maintenance costs, boosts resale value, and gives
                  you a smoother surface for plows, play, and deliveries. We
                  provide transparent scopes, schedules, and financing-friendly
                  estimates so you can plan with confidence.
                </p>
                <div class="row">
                  <div class="col-lg-7">
                    <figure class="w-img">
                      <Image
                        src={installation4}
                        alt="Private estate driveway paving project in Morris County NJ"
                        width={800}
                        height={500}
                        loading="lazy"
                      />
                    </figure>
                  </div>
                  <div class="col-lg-5 center-xs-list">
                    <h3 class="section-sub-subtitle pt-20 pb-10">
                      Installation Checklist
                    </h3>
                    <ul
                      class="service-details-page-list pt-20 pb-10 split-xs-columns"
                    >
                      <li>
                        Single point of contact from site prep through punch
                        list to keep decisions fast.
                      </li>
                      <li>
                        Precise grading, reinforced base layers, and tight
                        compaction to handle Jersey winters.
                      </li>
                      <li>
                        Packages for residential, commercial, industrial, and
                        private properties with custom finishes.
                      </li>
                      <li>
                        Optional sealcoating, striping, lighting coordination,
                        and seasonal maintenance plans.
                      </li>
                    </ul>
                    <h3 class="section-sub-subtitle pt-20 pb-10">
                      Serving North Jersey Counties
                    </h3>
                    <ul
                      class="service-details-page-list pt-20 pb-10 split-xs-columns"
                    >
                      {countiesServed.map((county) => (
                        <li>{county}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <MainServices />
          </div>
        </div>
      </section>
      <WhyChooseUs />
      <MapSection />
    </main>
    <Footer />
    <Scripts />
    <Flotante />
  </body>
</html>
