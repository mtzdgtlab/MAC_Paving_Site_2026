---
// Importar imágenes
import { Image } from "astro:assets";
import contactBg from "@/assets/imgs/bg/contact-cover.webp";
import asphaltReplacement from "@/assets/imgs/service/asphalt-paving/replacement-9.webp";
import asphaltService from "@/assets/imgs/service/asphalt-paving/asphalt-service.webp";
import extension1 from "@/assets/imgs/service/asphalt-paving/extension-1.webp";
import extension2 from "@/assets/imgs/service/asphalt-paving/extension-2.webp";
import extension3 from "@/assets/imgs/service/asphalt-paving/extension-3.webp";
import resurfacing2 from "@/assets/imgs/service/asphalt-paving/resurfacing-2.webp";
import stoneBorderService from "@/assets/imgs/service/belgium-blocks/belguium-service.webp";
import belgiumBlocks4 from "@/assets/imgs/service/belgium-blocks/belgium-blocks-4.webp";
import sealerService from "@/assets/imgs/service/sealer/sealer-service.webp";
import crackFilling3 from "@/assets/imgs/service/sealer/crack-filling-3.webp";
import crackFilling4 from "@/assets/imgs/service/sealer/crack-filling-4.webp";
import lineStriping1 from "@/assets/imgs/service/sealer/line-striping-1.webp";
import sealcoating2 from "@/assets/imgs/service/sealer/sealcoating-2.webp";
import shape9 from "@/assets/imgs/shapes/shape-9.webp";
import shape10 from "@/assets/imgs/shapes/shape-10.webp";
import BreadcrumService from "@/components/BreadcrumService.astro";
import CSSbase from "@/components/CSSbase.astro";
import Favicon from "@/components/Favicon.astro";
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import Preloader from "@/components/Preloader.astro";
import Scripts from "@/components/Scripts.astro";
import SocialMeta from "@/components/SocialMeta.astro";
import TestimonialsSlider from "@/components/TestimonialsSlider.astro";
import Flotante from "@/components/Flotante.astro";
import Quality from "@/components/Quality.astro";
import LargeForm from "@/components/LargeForm.astro";


const serviceGallery = [
  {
    image: extension2,
    alt: "Driveway extension underway for a Bergen County NJ home",
  },
  {
    image: extension1,
    alt: "New asphalt parking pad for a Morris County NJ residence",
  },
  {
    image: extension3,
    alt: "Driveway widening project for an Essex County NJ estate",
  },
  {
    image: asphaltService,
    alt: "Commercial asphalt paving staging in Hudson County NJ",
  },
  {
    image: sealerService,
    alt: "Sealcoating crew spraying asphalt in Union County NJ",
  },
  {
    image: crackFilling3,
    alt: "Crack repair specialist sealing joints in Sussex County NJ",
  },
  {
    image: crackFilling4,
    alt: "Residential driveway crack filling near Somerset County NJ",
  },
  {
    image: sealcoating2,
    alt: "Protective sealcoat curing on a Middlesex County NJ driveway",
  },
  {
    image: resurfacing2,
    alt: "Driveway resurfacing overlay completed in Bergen County NJ",
  },
  {
    image: lineStriping1,
    alt: "Fresh parking-lot striping in Middlesex County NJ",
  },
  {
    image: belgiumBlocks4,
    alt: "Belgium block apron accent on a Morris County NJ driveway",
  },
  {
    image: stoneBorderService,
    alt: "Custom Belgium block edging layout for an Essex County NJ home",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="format-detection" content="telephone=no" />
    <title>North Jersey Paving Services | MAC Paving</title>
    <meta name="robots" content="index, follow" />

    <!-- Preconexión para recursos externos (mejora rendimiento) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" />

    <meta
      name="description"
      content="Explore driveway paving installation, resurfacing, replacement, extensions, sealcoating, crack filling, line striping, and Belgium block services delivered by MAC Paving across Passaic, Bergen, Morris, Essex, Hudson, Union, Middlesex, Somerset, and Sussex counties."
    />
    <link
      rel="canonical"
      href="https://macpavingandsealcoating.com/services/"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="keywords"
      content="paving services NJ, driveway paving North Jersey, sealcoating services NJ, Belgium block edging Passaic"
    />

    <SocialMeta
      title="North Jersey Paving Services | MAC Paving"
      description="Driveway paving installation, resurfacing, replacement, extensions, sealcoating, crack filling, line striping, and Belgium blocks across North Jersey counties."
      url="https://macpavingandsealcoating.com/services/"
      image={contactBg}
      imageAlt="MAC Paving services overview hero background"
    />
    <Favicon />
    <CSSbase />
  </head>
  <body>
    <Preloader />
    <Navbar />

    <main>
      <div class="breadcrumb__area theme-bg-1 p-relative pt-160 pb-160">
        <BreadcrumService image={contactBg} />
        <div class="small-container">
          <div class="row justify-content-center justify-content-md-start">
            <div class="col-9 col-sm-9 col-md-8 col-lg-8 col-xl-8 col-xxl-8">
              <div class="breadcrumb__wrapper p-relative">
                <h1 class="breadcrumb__title">
                  Family-Owned Asphalt Paving Company in NJ
                </h1>
                <div class="breadcrumb__menu">
                  <nav>
                    <ul>
                      <li>
                        <span><a href="/">Home / </a></span>
                      </li>
                      <li><span>Services</span></li>
                    </ul>
                  </nav>
                </div>
              </div>
            </div>
              
          </div>
        </div>
      </div>
      <!-- Breadcrumb area end -->

      <section class="section-space-bottom section-space-top">
        <div class="small-container">
          <div class="row g-4 align-items-start">
            <div class="col-xxl-8 col-xl-8 col-lg-8">
              <span class="section-sub-title">Paving & Maintenance Menu</span>
              <h2 class="section-title mt-20">
                MAC Paving and Sealcoating Services
              </h2>
              <p class="mt-20">
                MAC Paving and Sealcoating LLC provides one point of contact for
                driveway paving installation, resurfacing, replacement,
                extensions, sealcoating programs, crack filling, line striping,
                and Belgium block edging. Owner-led crews coordinate simple
                permits, inspections, and finishing touches for residential
                driveways and neighborhood commercial lots.
              </p>
              <h3 class="service-details-subtitle mt-30">Property Types & Delivery</h3>
              <ul class="service-details-page-list mt-10 mb-20">
                <li>Single homes, estates, duplex driveways, and multifamily entrances.</li>
                <li>Shared parking courts for small apartment buildings or HOAs.</li>
                <li>Retail, medical, and professional offices needing scheduled paving windows.</li>
              </ul>
              <h3 class="service-details-subtitle mt-25">Service Area</h3>
              <p class="mb-25">
                Passaic · Bergen · Morris · Essex · Hudson · Union · Middlesex · Somerset ·
                Sussex counties. Request seasonal scheduling early to secure preferred paving
                and sealcoating weeks.
              </p>
            </div>
            <div class="col-xxl-4 col-xl-4 col-lg-4">
              <div class="p-30 bg-color-1 h-100 rounded-3 text-white">
                <h3 class="section-title text-white mb-15">
                  Request a Service Plan
                </h3>
                <p>
                  Share the square footage, property type, and timeline for your
                  paving or maintenance project and we will outline the best
                  approach for your site.
                </p>
                <a class="primary-btn-1 btn-hover mt-15" href="/contact/">
                  Send a Quote Request
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Service Slider area start -->
      <section
        aria-label="Services section"
        class="service-slider-section section-space bg-color-1"
      >
        <style>
          @import "/src/assets/css/service-cards.css";
        </style>
        <div class="shape-10" data-background={shape10.src}>
        </div>
        <div class="shape-9" data-background={shape9.src}></div>
        <div class="container">
          <div class="row g-4">
            <div class="col-xxl-12 col-xl-12 col-lg-12">
              <div class="row align-items-center justify-content-between mb-50">
                <div class="col-xxl-12 d-flex justify-content-between align-items-center flex-wrap">
                  <div class="title-box" data-aos="fade-left" data-aos-delay="200">
                    <span class="section-sub-titledos">
                      North Jersey Paving & Maintenance
                    </span>
                    <h3 class="section-title mt-35">
                      <a href="/services/" style="color: inherit; text-decoration: none;">
                        Signature Paving Services
                      </a>
                    </h3>
                  </div>
                  <div class="service_1_navigation__wrapprer position-relative z-1 mt-30">
                    <div class="common-slider-navigation">
                      <button class="service-1-button-prev" aria-label="Previous service">
                        <i class="fas fa-arrow-left"></i>
                      </button>
                      <button class="service-1-button-next" aria-label="Next service">
                        <i class="fas fa-arrow-right"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <div class="swiper service-active-1">
                <div class="swiper-wrapper">
                  <!-- Paving Services -->
                  <div class="swiper-slide">
                    <div class="service-card">
                      <!-- 1. Sección de Imagen -->
                      <div class="service-image-section">
                        <a href="/services/paving-services-nj/">
                          <figure class="service-image">
                            <Image
                              src={asphaltReplacement}
                              alt="Driveway paving crew compacting asphalt in Passaic County NJ"
                              width={370}
                              height={278}
                              format="webp"
                              quality={85}
                              sizes="(max-width: 768px) 100vw, 370px"
                            />
                          </figure>
                        </a>
                      </div>

                      <!-- 2. Sección de Icono -->
                      <div class="service-icon-section">
                        <div class="icon-box">
                          <i class="fas fa-road"></i>
                        </div>
                      </div>

                      <!-- 3. Sección de Título -->
                      <div class="service-title-section">
                        <h3 class="service-title">
                          <a href="/services/paving-services-nj/">Paving Services</a>
                        </h3>
                      </div>

                      <!-- 4. Sección de Descripción -->
                      <div class="service-description-section">
                        <p class="service-description">
                          Driveway installation, resurfacing, replacement, and
                          extensions with engineered bases, precise grading, and
                          clean finishing for homes and neighborhood lots.
                        </p>
                      </div>

                      <!-- 5. Sección de Botón -->
                      <div class="service-button-section">
                        <a href="/services/paving-services-nj/" class="service-btn">
                          Read More <i class="fas fa-angles-right"></i>
                        </a>
                      </div>
                    </div>
                  </div>

                  <!-- Sealer Services -->
                  <div class="swiper-slide">
                    <div class="service-card">
                      <!-- 1. Sección de Imagen -->
                      <div class="service-image-section">
                        <a href="/services/sealer-services-nj/">
                          <figure class="service-image">
                            <Image
                              src={sealerService}
                              alt="Sealcoating technician spraying asphalt protection in Bergen County NJ"
                              width={370}
                              height={278}
                              format="webp"
                              quality={85}
                              sizes="(max-width: 768px) 100vw, 370px"
                            />
                          </figure>
                        </a>
                      </div>

                      <!-- 2. Sección de Icono -->
                      <div class="service-icon-section">
                        <div class="icon-box">
                          <i class="fas fa-fill-drip"></i>
                        </div>
                      </div>

                      <!-- 3. Sección de Título -->
                      <div class="service-title-section">
                        <h3 class="service-title">
                          <a href="/services/sealer-services-nj/">Sealer Services</a>
                        </h3>
                      </div>

                      <!-- 4. Sección de Descripción -->
                      <div class="service-description-section">
                        <p class="service-description">
                          Sealcoating, crack filling, line striping, and seasonal
                          maintenance plans that extend the life of driveways and
                          small parking lots.
                        </p>
                      </div>

                      <!-- 5. Sección de Botón -->
                      <div class="service-button-section">
                        <a href="/services/sealer-services-nj/" class="service-btn">
                          Read More <i class="fas fa-angles-right"></i>
                        </a>
                      </div>
                    </div>
                  </div>

                  <!-- Belgium Blocks -->
                  <div class="swiper-slide">
                    <div class="service-card">
                      <!-- 1. Sección de Imagen -->
                      <div class="service-image-section">
                        <a href="/services/belgium-blocks/">
                          <figure class="service-image">
                            <Image
                              src={stoneBorderService}
                              alt="Belgium block edging crew setting stones in Morris County NJ"
                              width={370}
                              height={278}
                              format="webp"
                              quality={85}
                              sizes="(max-width: 768px) 100vw, 370px"
                            />
                          </figure>
                        </a>
                      </div>

                      <!-- 2. Sección de Icono -->
                      <div class="service-icon-section">
                        <div class="icon-box">
                          <i class="fas fa-th-large"></i>
                        </div>
                      </div>

                      <!-- 3. Sección de Título -->
                      <div class="service-title-section">
                        <h3 class="service-title">
                          <a href="/services/belgium-blocks/">Belgium Blocks</a>
                        </h3>
                      </div>

                      <!-- 4. Sección de Descripción -->
                      <div class="service-description-section">
                        <p class="service-description">
                          Belgium block edging and curbing for driveways and
                          walkways to add durable borders and clean, classic
                          lines.
                        </p>
                      </div>

                      <!-- 5. Sección de Botón -->
                      <div class="service-button-section">
                        <a href="/services/belgium-blocks/" class="service-btn">
                          Read More <i class="fas fa-angles-right"></i>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
           
          </div>
        </div>
      </section>
      <!-- Service Slider area end -->
      <LargeForm />

      <Quality />
      <!-- Project slider area start -->
      <section class="project-slider-section section-space fix">
        <div class="small-container">
          <div class="row">
            <div class="col-xxl-12">
              <div class="title-box mb-25 wow fadeInLeft" data-wow-delay=".5s">
                <span class="section-sub-title">RECENT PAVING WORK</span>
                <h3 class="section-title mt-25 mb-50">
                  Projects Around North Jersey
                </h3>
              </div>
            </div>
          </div>
        </div>
        <div class="project-slider-stage mt-10">
          <div class="container-fluid">
            <div class="swiper project-active-1">
              <div class="swiper-wrapper">
                {serviceGallery.map(({ image, alt }) => (
                  <div class="swiper-slide">
                    <a class="popup-image" href={image.src}>
                      <div class="project-slider-area p-relative">
                        <figure class="image m-imge shine-img">
                          <img src={image.src} alt={alt} />
                        </figure>
                      </div>
                    </a>
                  </div>
                ))}
              </div>
            </div>
          </div>
          <div class="project_1_navigation__wrapprer">
            <div class="common-slider-navigation">
              <button class="project-1-button-prev" aria-label="Previous project">
                <i class="fas fa-arrow-left"></i>
              </button>
              <button class="project-1-button-next" aria-label="Next project">
                <i class="fas fa-arrow-right"></i>
              </button>
            </div>
          </div>
        </div>
      </section>
      <!-- Project area end -->
      <TestimonialsSlider />

      <!-- Icon box counter area start -->
      <section class="icon-box-counter-section section-space">
        <div class="small-container">
          <div class="row g-4">
            <div class="col-xxl-3 col-xl-3 col-lg-6 col-md-6 col-6">
              <div class="icon-box-counter-area">
                <div class="icon-box">
                  <i class="fas fa-clock"></i>
                </div>
                <div class="content">
                  <h3><span class="counter">15</span>+</h3>
                  <span class="text-1">Years Paving North Jersey</span>
                </div>
              </div>
            </div>
            <!-- block -->
            <div class="col-xxl-3 col-xl-3 col-lg-6 col-md-6 col-6">
              <div class="icon-box-counter-area">
                <div class="icon-box">
                  <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="content">
                  <h3><span class="counter">9</span></h3>
                  <span class="text-1">Counties Served</span>
                </div>
              </div>
            </div>
            <!-- block -->
            <div class="col-xxl-3 col-xl-3 col-lg-6 col-md-6 col-6">
              <div class="icon-box-counter-area">
                <div class="icon-box">
                  <i class="fas fa-layer-group"></i>
                </div>
                <div class="content">
                  <h3><span class="counter">4</span></h3>
                  <span class="text-1">Core Service Lines</span>
                </div>
              </div>
            </div>
            <!-- block -->
            <div class="col-xxl-3 col-xl-3 col-lg-6 col-md-6 col-6">
              <div class="icon-box-counter-area">
                <div class="icon-box">
                  <i class="fas fa-people-carry"></i>
                </div>
                <div class="content">
                  <h3><span class="counter">1</span></h3>
                  <span class="text-1">Family-Owned Crew</span>
                </div>
              </div>
            </div>
            <!-- block -->
          </div>
        </div>
      </section>
      <!-- Icon box counter area end -->
    </main>

    <Footer />
    <Scripts />
    <!-- Inicializaciones -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const contactForm = document.getElementById("contactForm-main");
        const formMessage = document.getElementById("formMessage");

        if (
          contactForm instanceof HTMLFormElement &&
          formMessage instanceof HTMLElement
        ) {
          contactForm.addEventListener("submit", async (e) => {
            e.preventDefault();
            try {
              const response = await fetch(contactForm.action, {
                method: "POST",
                body: new FormData(contactForm),
                headers: {
                  Accept: "application/json",
                },
              });

              if (response.ok) {
                formMessage.textContent =
                  "Thank you for your message! We'll get back to you soon.";
                formMessage.style.color = "#FFFFFF";
                formMessage.style.fontWeight = "bold";
                formMessage.style.fontSize = "1.2em";
                contactForm.reset();
              } else {
                throw new Error("Form submission failed");
              }
            } catch (error) {
              formMessage.textContent =
                "Sorry, there was an error submitting your message. Please try again.";
              formMessage.style.color = "yellow";
            }
            formMessage.style.display = "block";
          });
        }
      });
    </script>
    <Flotante />
  </body>
</html>
